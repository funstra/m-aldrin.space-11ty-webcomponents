---
layout: base.njk
---

{% set n = 3 %}
{% set mod2 = cycler(0, 1) %}
<svg width="100%" height="100%" viewBox="0 0 256 256" preserveAspectRatio="xMidYMid" 
style="overflow: visible; grid-row: 1/3;grid-column: 1/3;" >
    <g transform="translate(144 -64) rotate(60) translate(0 0)">
        {% for j in range(0, n) %}
            <g transform="translate({{mod2.next() * (256/n/2)}} {{ j * (256 / (n * (3/2.5)) ) }})">
                {% for i in range(0, n) %}
                    <g class="cube" style="--speed:{{[3,6,9,12,16] | random}}s;--offset-y:{{[2,-4,6,8,-6,-2,-12] | random}}px;--offset-x:{{[1,-2,3,4,-6,7] | random}}px">
                        <g  transform="translate({{ i * (256/n) }} 0)" fill="hsl(var(--col-{{["primary","ternary","quadrary"][2]}}))" >
                            <g transform="scale({{(256 / n ) / 64 }})">
                                <polygon
                      transform="skewY(30)"
                      points="
                            0,0 32,0 32,32 0,32"
                      fill-opacity="0.75"
/>
                                <polygon
                      transform="skewY(-30) translate(32 37)"
                      points="
                            0,0 32,0 32,32 0,32"
/>
                                <polygon
                      transform="scale(1.41,.82) rotate(45) translate(0.1 -32)"
                      points="
                            0,0 32,0 32,32 0,32"
                      fill-opacity="0.3"
/>
                            </g>
                        </g>
                    </g>
                {% endfor %}
            </g>
        {% endfor %}
    </g>
</svg>
<h1 style="grid-row: 2;grid-column: 1;align-self: flex-end; color: hsl(var(--col-ternary));">mkj</h1>